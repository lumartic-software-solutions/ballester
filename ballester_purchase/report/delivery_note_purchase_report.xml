						<span style="margin-left: 100px; !important;">
							<t t-if="o.date_order">
								Fecha:
								<span t-field="o.date_order"/>
							</t>
						</span>
						<br/>
						<span style="margin-left: 100px; !important;">
							<t t-if="o.company_id.partner_id.vat">
								Para:
								<span t-field="o.company_id.partner_id.vat"/>
							</t>
						</span>
					</div>
