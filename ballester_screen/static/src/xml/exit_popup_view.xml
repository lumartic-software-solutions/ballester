<template xml:space="preserve">
	<!-- ================ Exit =============== -->
	<t t-name="ExitPopup">
		<button type="button" style="margin-right: 25px; margin-top: 25px;" class="btn btn-primary common_button" data-toggle="modal" data-target="#ExitModel">Exit</button>
		<!-- Modal -->
		<div class="modal fade" id="ExitModel" role="dialog">
			<div class="modal-dialog">
				<!-- Modal content-->
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal">&#38;times;</button>
						<h4 class="modal-title">Confirmation Dialog</h4>
					</div>
					<div class="modal-body">
						<p>Are you sure you want to exit?</p>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-primary confirm_exit_popup"  data-dismiss="modal">Yes</button>
						<button type="button" class="btn btn-secondary "   data-dismiss="modal">Close</button>
					</div>
				</div>
			</div>
		</div>
	</t>
</template>
	