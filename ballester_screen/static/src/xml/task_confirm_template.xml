<template xml:space="preserve">
	
<!-- ================destruction ================ -->
	<t t-name="internaldestructiontemplate">
		<button type="button" style="margin-top: 25px;margin-left:-50px" class="btn btn-primary common_button destruction_wash_order" id ="destruction_wash_order" data-toggle="modal" data-target="#DestructionwashModel">Destruction</button>
		<div class="modal fade" id="DestructionwashModel" role="dialog">
			<div class="modal-dialog">
				<!-- Modal content-->
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal">&#38;times;</button>
						<h4 class="modal-title">Confirmation Dialog</h4>
					</div>
					<div class="modal-body">
						<p>Are you sure you want to Destruct this product?</p>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-primary create_destruction_order_confirm"  data-dismiss="modal">Yes</button>
						<button type="button" class="btn btn-secondary "   data-dismiss="modal">Close</button>
					</div>
				</div>
			</div>
		</div>
	</t>



</template>
