<template xml:space="preserve">
	<!-- ================ current login user =============== -->
	<t t-name="LoginUser">
		<div class="col-md-4 pull-right">
			<a class="pull-left my_profile" style="margin-top: 10px;">
				<t t-if="widget.employee_image_url != 'undefined'" >
					<img class="media-object dp img-circle" t-att-src="'data:image/png;base64,'+widget.employee_image_url"
						style="width: 100px;height:100px;"/>
				</t>
			</a>
			<br/>
			<h4>
				<span t-esc="widget.employee"/>
			</h4>
		</div>
	</t>
</template>
	